<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>EmpresaController</servlet-name>  <servlet-class>org.br.farmacia.controllers.EmpresaController</servlet-class> </servlet>
    <servlet-mapping>
        <servlet-name>EmpresaController</servlet-name> <url-pattern>/api/empresa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FuncionarioController</servlet-name>  <servlet-class>org.br.farmacia.controllers.FuncionarioController</servlet-class> </servlet>
    <servlet-mapping>
        <servlet-name>FuncionarioController</servlet-name> <url-pattern>/api/funcionarios</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransportadoraController</servlet-name>  <servlet-class>org.br.farmacia.controllers.TransportadoraController</servlet-class> </servlet>
    <servlet-mapping>
        <servlet-name>TransportadoraController</servlet-name> <url-pattern>/api/transportadora</url-pattern>
    </servlet-mapping>
</web-app>
